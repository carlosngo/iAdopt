<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Home</title>
        <link rel="shortcut icon" type="image/png" href="../assets/images/icon.PNG">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">               
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" type="text/css" href="../css/home.css">   
        <link rel="stylesheet" type="text/css" href="../css/global.css">   
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="../js/home.js"></script>
        <script src="../js/global.js"></script>
    </head>
    <body>
        {{#if user}}
            {{#if user.admin}}
                {{> adminNav}}
            {{else}}
                {{> adopterNav}}
            {{/if}}
        {{else}}
            {{> nav}}
        {{/if}}
        <!-- CONTENT -->
        <div id="mainContent">
            <div id="carousel-container" class="container-center">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="../assets/images/spay-neuter.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../assets/images/spay-neuter.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../assets/images/spay-neuter.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>   
            </div>
            <div class="row">
                <div class="col-8">
                    <h1 class="section-header">News & Updates</h1>
                    <div class="container-center">
                        {{!-- <input type="button" class="btn btn-primary btn-add" value="Add an Article"><br><br> --}}
                    {{!-- Add Card --}}
                    {{#if user}} 
                            {{#if user.moderator}}
                        <div class="card" style="margin-bottom:15px;">
                            <div class="row no-gutters">
                                <div class="col-4">
                                    <div class="card-img">
                                        <img id="add-article-image" src="/assets/images/website.png" class="img-fluid" alt="Image Failed to load" style="width:256px">
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="card-block px-2 flex-col">
                                        <div class="card-header flex-1">
                                            <h3 class="card-title">Add an Article</h3>
                                            {{!-- <div class="card-author text-muted"></div>
                                            <div class="card-timestamp text-muted"></div> --}}
                                        </div>
                                        <div class="card-content flex-3 flex-col">
                                            <form action="addArticle" method="POST">
                                                <div class="article-title">
                                                    Article Title:     <input type="text" name="title" id="title-field" class="input-title rounded-corners" placeholder="Enter Article Title">
                                                </div><br>
                                                <div class="form-group green-border-focus rounded-corners">
                                                    <textarea type="text" name="content" id="content-field" class="form-control z-depth-1" rows="6" placeholder="Write something here..."></textarea>
                                                </div>
                                                <div id="add-article-controls">
                                                    {{!-- <input type="button" class="btn btn-primary btn-upload" value="Upload Image"> --}}
                                                    <input type="file" id="image-file" style="border-radius: 0px;" value="Upload Image !important" accept="image/*"/>
                                                    <input type="button" id="btn-addArticle" class="btn btn-primary btn-add" value="Save">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            {{/if}}
                        {{/if}}
                        {{!-- End of Add Card --}}
                        {{#each news}}
                        <div class="card" style="margin-bottom:15px;">
                            <div class="row no-gutters">
                                <div class="col-4">
                                    <div class="card-img">
                                        <img src="{{picture}}" class="img-fluid" alt="Image Failed to load">
                                    </div>
                                    
                                </div>
                                <div class="col-8">
                                    <div class="card-block px-2 flex-col">
                                        <div class="card-header flex-1">
                                            <h3 class="card-title">{{title}}</h3>
                                            <div class="card-author text-muted">{{author}}</div>
                                            <div class="card-timestamp text-muted">{{timestamp}}</div>
                                        </div>
                                        <div class="card-content flex-3 flex-col">
                                            <p class="">{{content}}</p>
                                            <div class="">
                                                
                                                <form action="deleteArticle" method="POST">
                                                    <input type="button" data-id={{@key}} class="btn btn-primary btn-article" value="Read More"></a>
                                                    <input name="id" type="hidden" value={{@key}}>
                                                    <input type="submit" href="#" class="btn btn-danger btn-primary btn-article" value="Remove Article">
                                                </form>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="col-4">
                    <h1 class="section-header">Featured Cats</h1>
                    <div class="mainCatsContent">
                        {{#each cats}}
                            <div class="cardContainer viewCatCard" data-id={{@key}}>
                                <div class="card flex-item" style="width: 18rem;">
                                    <img class="card-img-top" src="{{picture}}" alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title"><b>{{name}}</b></h5>
                                        <h8>{{gender}}, {{age}}</h8>
                                        {{#if adoption}}
                                            <br><h8><b>For Adoption</b></h8>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        {{/each}}

                    </div>
                </div>
            </div>
        </div>
    
        {{> footer}}
        <form action="/article" id="article-id-form">
            <input type="hidden" name="id" id="article-id">
        </form>
        <form action="/cat" id="cat-id-form">
            <input type="hidden" name="id" id="cat-id">
        </form>
    </body>
</html>