<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{catName}}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="../js/cat-info.js"></script>
        <script src="../js/global.js"></script>
        <link rel="shortcut icon" type="image/png" href="../assets/images/icon.PNG">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">               
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" type="text/css" href="../css/cat-info.css">   
        <link rel="stylesheet" type="text/css" href="../css/global.css">   
        
    </head>
    <body>
       {{#if user}}
            {{#if user.admin}}
                {{> adminNav}}
            {{else}}
                {{> adopterNav}}
            {{/if}}

        {{else}}
            {{> nav}}
        {{/if}}
        <div id="mainContent" class="row">
            <!-- <div id="back-btn"> -->
            <a>
                <img src="../assets/images/close.png" id="back-btn" width="40px" height="40px" alt="Close">
            </a>
            <!-- </div> -->
            <div class="col-md-6" id="left-pane">
                <!--Carousel Wrapper-->
                <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Third slide">
                        </div>
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="1"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="2"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                    </ol>
                </div>
                <!--/.Carousel Wrapper-->
                                        
            </div>
            <div class="col-md-6" id="right-pane">
                <h3>Hi, my name is:</h3>
                {{#with cat}}
                    <h1><b>
                        <input type="text" class="toggle-edit" value="{{name}}!">
                        <span class="toggle-show">{{name}}!</span>
                    </b></h1>
                    <h5>
                        <b>Age:</b> 
                        <select id="ageOptions" class="toggle-edit">
                            <option>Kitten</option>
                            <option>Adult</option>
                        </select>
                        <span id="age" class="toggle-show">{{age}}</span>
                        <br>
                        
                        <b>Sex:</b> 
                        <select id="sexOptions" class="toggle-edit">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span id="gender" class="toggle-show">{{gender}}</span>
                        <br>
                        
                        <b>Location:</b> 
                        {{!-- <span class="toggle-edit">{{> locationOption}}</span> --}}
                        <select id="locationOptions" class="toggle-edit">

                            {{> locationOptions}}
                        </select>
                        <span id="location" class="toggle-show">{{location}}</span>
                        <br>
                        
                        <b>Fur Pattern: </b> 
                        {{!-- <span class="toggle-edit">{{> patternOption}}</span> --}}
                        <select id="furPatternOptions" class="toggle-edit">{{> furPatternOptions}}</select>
                        <span id="furPattern" class="toggle-show">{{furPattern}}</span>
                        <br>

                        <b>Medical Procedures Undertaken: </b> 
                        <input type="text" class="toggle-edit" value="{{medProcedures}}"> 
                        <span class="toggle-show">{{medProcedures}}</span>
                        <br>


                        <b>Complications:</b> 
                        <input type="text" class="toggle-edit" value="{{complications}}">
                        <span class="toggle-show">{{complications}}</span>
                        <br>

                        <b>Other notes: </b>
                        <input type="text" class="toggle-edit" value="{{notes}}"> 
                        <span class="toggle-show">{{notes}}</span>
                        <br>
                    </h5>
                {{/with}}
               {{#if user}}
                    {{#if user.admin}}
                        <div id="adopt-btn-container">
                            {{!-- <button class="btn" >
                                Remove Cat
                            </button> --}}
                            <div style="width: 5px;"></div>
                            <button class="btn toggle-show" id="btn-edit-cat">
                            {{!-- <button class="btn" data-toggle="modal" data-target="#exampleModalCenter"> --}}
                                Edit Info
                            </button>
                            <button class="btn-light toggle-edit" id="btn-cancel-edit">
                                Cancel
                            </button>
                            <button class="btn toggle-edit">
                                Save Changes
                            </button>
                        </div>
                    {{else}}
                        <div id="adopt-btn-container">
                            <button class="btn">
                                <img src="../assets/images/red-heart.png" width="30px" height="30px"> Adopt Me!
                            </button>
                        </div>
                    {{/if}}
                {{/if}}

                

            </div>
        </div>
        {{> footer}}
        <form action="editCat" >
            <input type="hidden">
        </form>
        {{#if edit}}
            <input type="hidden" id="state" value="edit">
        {{else}}
            <input type="hidden" id="state" value="show">
        {{/if}}
    </body>
</html>