<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{catName}}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="../js/cat-info.js"></script>
        <link rel="shortcut icon" type="image/png" href="../assets/images/icon.PNG">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">               
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" type="text/css" href="../css/cat-info.css">   
        <link rel="stylesheet" type="text/css" href="../css/global.css">   
        
    </head>
    <body>
       {{#if user}}
            {{#if user.admin}}
                {{> adminNav}}
            {{else}}
                {{> adopterNav}}
            {{/if}}

        {{else}}
            {{> nav}}
        {{/if}}
        <div id="mainContent" class="row">
            <!-- <div id="back-btn"> -->
            <a>
                <img src="../assets/images/close.png" id="back-btn" width="40px" height="40px" alt="Close">
            </a>
            <!-- </div> -->
            <div class="col-md-6" id="left-pane">
                <!--Carousel Wrapper-->
                <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Third slide">
                        </div>
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="1"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="2"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                    </ol>
                </div>
                <!--/.Carousel Wrapper-->
                                        
            </div>
            <div class="col-md-6" id="right-pane">
                <h3>Hi, my name is:</h3>
                {{#with cat}}
                    <h1><b>{{name}}!</b></h1>
                    <h5>
                        <b>Age:</b> {{age}} <br>
                        <b>Sex:</b> {{gender}} <br>
                        <b>Location:</b> {{location}} <br>
                        <b>Fur Pattern: </b> {{furPattern}} <br>
                        <b>Medical Procedures Undertaken: </b> {{medProcedures}} <br>
                        <b>Complications:</b> {{complications}} <br>
                        <b>Other notes: </b>{{notes}} <br>
                    </h5>
                {{/with}}
               {{#if user}}
                    {{#if user.admin}}
                        <div id="adopt-btn-container">
                            {{!-- <button class="btn" >
                                Remove Cat
                            </button> --}}
                            <div style="width: 5px;"></div>
                            <button class="btn" data-toggle="modal" data-target="#exampleModalCenter">
                                Edit Info
                            </button>
                        </div>
                    {{else}}
                        <div id="adopt-btn-container">
                            <button class="btn">
                                <img src="../assets/images/red-heart.png" width="30px" height="30px"> Adopt Me!
                            </button>
                        </div>
                    {{/if}}
                {{/if}}

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content" style="color:black; font-family: 'Lato', sans-serif;">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle" style=" ">Edit Info</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div style="display: flex; flex-direction: row; margin: 8px;">
                            <div >
                                Age:
                                <select id="ageOptions">
                                    <option value="kitten">Kitten</option>
                                    <option value="adult">Adult</option>
                                </select>
                            </div>
                            <div style="width: 30px;"></div>
                            <div>
                            Sex:
                                <select id="sexOptions">
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div style="margin: 8px;">
                        Location: 
                        <select id="locationOptions">
                            {{#each locations}}
                                <option value="{{location}}">{{location}}</option>
                            {{/each}}
                        </select>
                        </div>
                        <div style="margin: 8px;">
                            Fur Pattern: 
                            <select id="furPatternOptions">
                                {{#each furPatterns}}
                                    <option value="{{furPattern}}">{{furPattern}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div style="margin: 15px 8px 8px 8px;">
                            Medical Procedures Undertaken <br>(please separate each with a comma):<br> 
                            <input type="text" placeholder="{{medicalProcedures}}" style="width: 100%">
                        </div>
                        <div style="margin: 8px;">
                            Complications: <br><input type="text" placeholder="{{complications}}" style="width: 100%">
                        </div>
                        <div style="margin: 8px;">
                            Other notes: <br><input type="text" placeholder="{{notes}}" style="width: 100%">
                        </div>
                        
                        <script>
                            document.getElementById('ageOptions').value = ''+{{age}};
                            document.getElementById('sexOptions').value = ''+{{gender}};
                            document.getElementById('locationOptions').value = ''+{{location}};
                            document.getElementById('furPatternOptions').value = ''+{{furPattern}};
                        </script>
                    </div>
                    <div class="modal-footer">
                         <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn" id="saveChangesBtn" onclick="">Save</button>
                    </div>
                    </div>
                </div>
                </div>

                {{!-- <div id="adopt-btn-container">
                    <button class="btn">
                        <img src="../assets/images/red-heart.png" width="30px" height="30px"> Adopt Me!
                    </button>
                </div> --}}
            </div>
        </div>
        {{> footer}}
    </body>
</html>