                {{/with}}
                {{#if user}} {{#if user.admin}}
                    <div id="adopt-btn-container">
                        <button class="btn" >
                            Delete Article
                        </button>
                        <div style="width: 5px;"></div>
                        <button class="btn">
                            Edit Article
                        </button>
                    </div>
                {{/if}} {{/if}}
                
            </div>
        </div>
         {{> footer}}
    </body>
</html>