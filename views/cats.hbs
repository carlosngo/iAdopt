<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Cats</title>
        <link rel="shortcut icon" type="image/png" href="../assets/images/icon.PNG">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="../js/cats.js"></script>
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">               
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">   
        <link rel="stylesheet" type="text/css" href="../css/global.css">
        <link rel="stylesheet" type="text/css" href="../css/cats.css">  
          
        <script>
            
        </script>    
    </head>
    <body>
        {{#if user}}
            {{#if user.admin}}
                {{> adminNav}}
            {{else}}
                {{> adopterNav}}
            {{/if}}
        {{else}}
            {{> nav}}
        {{/if}}

    <!-- CONTENT -->
        <div id="mainContent">
            <h1 id="titleDiv">Our Cats</h1>
            <!-- SEARCH BAR -->
            <div id="search-filters">
                <div class="headerBar">
                    <div id="searchBarDiv">
                        <input type="text" placeholder="Enter a name" id="searchInput">
                        <button class="btn" id="searchBtn" onclick="search()"><i class="fa fa-search"></i></button>
                    </div>
                </div> 
                <div class="headerBar">
                    <!-- <button class="btn" id="filterBtn"><i class="fa fa-filter" id="filterIcon" >&nbsp;Filter</i></button> -->
                    <button class="btn" id="filterBtn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#filterModal">Filter</button>
                </div>
    
                <!-- Filter Modal -->
                <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Filters</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Location: 
                                <select id="locationOptions">
                                    <option selected value="all">All</option>
                                    {{#each locations}}
                                        <option value="{{location}}">{{location}}</option>
                                    {{/each}}
                                </select><br><br>
                                Fur-pattern: 
                                <select id="furPatternOptions">
                                    <option selected value="all">All</option>
                                    {{#each furPatterns}}
                                        <option value="{{furPattern}}">{{furPattern}}</option>
                                    {{/each}}
                                </select><br><br>
                                Sex: 
                                <select id="sexOptions">
                                    <option selected value="all">All</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select><br><br>
                                Age: 
                                <select id="ageOptions">
                                    <option selected value="all">All</option>
                                    {{#each ages}}
                                        <option value="{{age}}">{{age}}</option>
                                    {{/each}}
                                </select><br><br>
                                Neutered: 
                                <select id="statusOptions">
                                    <option selected value="all">All</option>
                                    <option value="neutered">Neutered</option>
                                    <option value="unneutered">Unneutered</option>
                                </select><br>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn" id="resetBtn" onclick="resetFilters()">Reset</button>
                                <button type="button" class="btn" id="applyFilterBtn" onclick="filterCards()">Done</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- SEARCH BAR END -->

            <!-- SEARCH RESULTS --> 
            <div id="search-results">
                {{#if user}} 
                    {{#if user.admin}}
                    <div class="cardContainer" id="addCatCard" data-toggle="modal" data-target="#addCatModal">
                        <div class="card flex-item" style="width: 18rem; height:349px" >
                                <img class="card-img-top" src="../assets/images/addCat.png" alt="Card image cap">
                                <div class="card-body" style="padding: 50px 20px 10px 20px">
                                    <h5 class="card-title">Add Cat</h5>
                                </div>
                        </div>
                    </div>
                    {{/if}} 
                {{/if}}
                {{#each cats}}
                    <div class="cardContainer" data-id={{@key}}>
                        <div class="card flex-item" style="width: 18rem;">
                            <img class="card-img-top" src="{{picture}}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                <h8>{{gender}}, {{age}}</h8>
                            </div>
                            {{#if ../user}} 
                                {{#if ../user.admin}}
                                    <div class="btnDiv">
                                        <button href="#" class="btn catActions">Edit Info</button>
                                        <button href="#" class="btn catActions">Remove Cat</button>
                                    </div>
                                {{/if}} 
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        {{> footer}}
        <form action="/cat" id="cat-id-form">
            <input type="hidden" name="id" id="cat-id">
        </form>
    </body>
</html>