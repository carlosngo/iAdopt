<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{catName}}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="../js/cat-info.js"></script>
        <script src="../js/global.js"></script>
        <link rel="shortcut icon" type="image/png" href="../assets/images/icon.PNG">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">               
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" type="text/css" href="../css/cat-info.css">   
        <link rel="stylesheet" type="text/css" href="../css/global.css">   
        
    </head>
    <body>
       {{#if user}}
            {{#if user.admin}}
                {{> adminNav}}
            {{else}}
                {{> adopterNav}}
            {{/if}}

        {{else}}
            {{> nav}}
        {{/if}}
        <div id="mainContent" class="row">
            <!-- <div id="back-btn"> -->
            <a>
                <img src="../assets/images/close.png" id="back-btn" width="40px" height="40px" alt="Close">
            </a>
            <!-- </div> -->
            <div class="col-md-6" id="left-pane">
                <!--Carousel Wrapper-->
                <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{cat.picture}}" alt="Third slide">
                        </div>
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="1"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="2"><img class="d-block w-100" src="{{cat.picture}}" class="img-fluid"></li>
                    </ol>
                </div>
                <!--/.Carousel Wrapper-->
                                        
            </div>
            <div class="col-md-6" id="right-pane">
                <h3>Edit Info</h3>
                {{#with cat}}
                    {{!-- <h1><b>{{name}}</b></h1> --}}
                    <h5>
                        Name: <input type="text" placeholder="{{name}}">
                        Age: <input type="text" placeholder="{{age}}"> <br>
                        Sex: <input type="text" placeholder="{{gender}}"><br>
                        Location: <input type="text" placeholder="{{location}}"><br>
                        Fur Pattern: <input type="text" placeholder="{{furPattern}}"><br>
                        Medical Procedures Undertaken: <input type="text" placeholder="{{medProcedures}}"><br>
                        Complications: <input type="text" placeholder="{{complications}}"><br>
                        Other notes: <input type="text" placeholder="{{notes}}"><br>
                    </h5>
                {{/with}}
               {{#if user}}
                    {{#if user.admin}}
                        <div id="adopt-btn-container">
                            <button class="btn" >
                                Cancel
                            </button>
                            <div style="width: 5px;"></div>
                            <button class="btn" data-toggle="modal" data-target="#exampleModalCenter">
                                Save Changes
                            </button>
                        </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
        {{> footer}}
    </body>
</html>